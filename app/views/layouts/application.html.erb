<!DOCTYPE html>
<html>
  <head>
    <title>Airwaves</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css?family=Raleway:300" rel="stylesheet/application">
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  </head>

  <body>
    <header>
      <h1>airwaves.</h1>

    </header>
    <% if !logged_in? %>
      <li><%= link_to "Sign Up", new_user_path %></li>
      <li><%= link_to "Login", login_path %></li>
    <% else %>
      <%= link_to "#{current_user.first_name}'s profile", user_path(current_user) %></br>
      <%= link_to "my airlines", airlines_path %></br>
      <%= link_to "log out", logout_path %>
      <% end %>


      <% if flash[:message] %>
        <%= flash[:message] %>
      <% end %>
      <%= yield %>
    </body>
  </html>
